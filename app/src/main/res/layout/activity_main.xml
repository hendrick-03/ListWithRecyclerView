<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="33dp"
        android:text="Intent Explicita" />

    <EditText
        android:id="@+id/id_ed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/id_ed"
        android:layout_marginTop="30dp"
        android:inputType="number"
        android:text="" />

    <EditText
        android:id="@+id/nome_ed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/nome_ed"
        android:layout_marginTop="30dp"
        android:inputType="textPersonName"
        android:text="" />

    <EditText
        android:id="@+id/curso_ed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/curso_ed"
        android:layout_marginTop="30dp"
        android:inputType="textPersonName"
        android:text="" />

    <EditText
        android:id="@+id/ano_ed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/ano_ed"
        android:layout_marginTop="30dp"
        android:inputType="number" />

    <EditText
        android:id="@+id/semestre_ed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/semestre_ed"
        android:ems="10"
        android:layout_marginTop="30dp"
        android:inputType="number" />

    <Button
        android:id="@+id/gravarbtn"
        android:layout_width="match_parent"
        android:layout_margin="50dp"
        android:layout_height="wrap_content"
        android:text="Save" />

    <Button
        android:id="@+id/listarbtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="50dp"
        android:text="Listar" />

</LinearLayout>