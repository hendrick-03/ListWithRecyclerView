<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/id_detalhes_Tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#263238"
        android:textSize="20sp"
        android:text="TextView" />

    <TextView
        android:id="@+id/nome_detalhes_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#263238"
        android:textSize="20sp"
        android:text="TextView" />

    <TextView
        android:id="@+id/curso_detalhes_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#263238"
        android:textSize="20sp"
        android:text="TextView" />

    <TextView
        android:id="@+id/ano_detalhes_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#263238"
        android:textSize="20sp"
        android:text="TextView" />

    <TextView
        android:id="@+id/semestre_detalhes_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#263238"
        android:textSize="20sp"
        android:text="TextView" />

    <Button
        android:id="@+id/voltar_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="500sp"
        android:text="Voltar" />

</LinearLayout>